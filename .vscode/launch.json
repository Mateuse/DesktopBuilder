    "version": "0.2.0",
    "configurations": [

        {
            "name": "Parse Data: Run All Components",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/workers/parse_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scraper",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/scraper"
            }
        },
        {
            "name": "Parse Data: Debug Single Component",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/workers/parse_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scraper",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/scraper"
            },
            "args": []
        },
        {
            "name": "Parse Data: Test Case Fan (Limited)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/workers/parse_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scraper",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/scraper"
            },
            "args": ["--component", "case_fan", "--limit", "10", "--verbose"]
        },
        {
            "name": "Parse Data: Debug Memory Components",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/workers/parse_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scraper",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/scraper"
            },
            "args": ["--component", "memory", "--limit", "5", "--verbose"]
        },
        {
            "name": "Parse Data: Debug CPU Components",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/workers/parse_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scraper",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/scraper"
            },
            "args": ["--component", "cpu", "--limit", "5", "--verbose"]
        }
    ]
}
